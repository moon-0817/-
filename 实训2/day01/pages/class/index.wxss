.class {
  width: 100%;
  height: 100%;
}

.class .top {
  width: 100%;
  height: 60px;
  background-color: red;
}

.class .top .inp {
  width: 80%;
  height: 70%;
  border-radius: 25px;
  margin-left: 10px;
  background-color: #fff;
  text-align: center;
}

.class .box {
  width: 100%;
  height: 900px;
  display: flex;
}

.class .box .box_left {
  height: 500px;
  text-align: center;
  padding: 0 3px;
}

.class .box .box_left .scroll {
  width: 100%;
  height: 100%;
}

.class .box .box_left .scroll_text {
  height: 70px;
  border-bottom: 1px solid #cccccc;
  margin: 5px 0;
}

.class .box .box_left .active {
  border-left: 3px solid red;
  font-size: 20px;
  color: red;
}

.class .box .box_right {
  height: 900px;
  flex: 1;
  text-align: center;
  padding: 20px;
}

.class .box .box_right .right_scroll {
  height: 600px;
}

.class .box .box_right .box-con {
  width: 100%;
  height: 900px;
  display: flex;
  flex-wrap: wrap;
}

.class .box .box_right .box-con .title {
  width: 100%;
}

.class .box .box_right .box-con .box_children .img {
  width: 80px;
  height: 80px;
}
