.goods {
  width: 100%;
  height: 100%;
}
.goods .top {
  width: 100%;
  height: 60px;
  background-color: red;
}

.goods .top .inp {
  width: 80%;
  height: 70%;
  border-radius: 25px;
  margin-left: 10px;
  background-color: #fff;
  text-align: center;
}
.goods .box {
  width: 100%;
  height: 100px;
  display: flex;
  align-items: center;
}

.goods .box .box_left {
  width: 40%;
}

.goods .box .box_left .img {
  width: 150px;
  height: 80px;
}

.goods .box .box_right {
  font-size: 14px;
}

.goods .box .box_right .name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods .box .box_right .price {
  color: red;
}
